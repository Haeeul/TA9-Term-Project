<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.mh_term_app.ui.sign.SignViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.sign.up.SignUpActivity">

        <ImageView
            android:id="@+id/btn_sign_up_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="goToBackListener"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_btn_back" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_sign_up"
            style="@style/ActivityTitle"
            app:layout_constraintBottom_toBottomOf="@+id/btn_sign_up_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_sign_up_back" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:src="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_sign_up_back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:text="@string/txt_desc_sign_up"
            style="@style/BoldText"
            android:textSize="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <EditText
            android:id="@+id/edt_sign_up_email"
            style="@style/EditHintText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_square_line_grey_8"
            android:hint="@string/txt_hint_email_input"
            android:inputType="number"
            android:nextFocusDown="@id/edt_sign_up_password"
            android:onTextChanged="@{vm::inputEmail}"
            android:paddingHorizontal="16dp"
            android:text="@={vm.emailTxt}"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            style="@style/MediumText"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:visibility="@{vm.isValidEmailNotice ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="@+id/edt_sign_up_email"
            app:layout_constraintTop_toBottomOf="@+id/edt_sign_up_email" />

        <EditText
            android:id="@+id/edt_sign_up_password"
            style="@style/EditHintText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_square_line_grey_8"
            android:hint="@string/txt_hint_password_input"
            android:inputType="number"
            android:onTextChanged="@{vm::inputPassword}"
            android:paddingHorizontal="16dp"
            android:text="@={vm.passwordTxt}"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/edt_sign_up_email"
            app:layout_constraintStart_toStartOf="@+id/edt_sign_up_email"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <TextView
            android:id="@+id/txt_sign_up_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{vm.passwordNotice}"
            style="@style/MediumText"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:visibility="@{vm.isValidPasswordNotice ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/edt_sign_up_password"
            app:layout_constraintTop_toBottomOf="@+id/edt_sign_up_password" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up_next"
            style="@style/ButtonText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/selector_sign_btn"
            android:enabled="@{vm.isValidAuth}"
            android:text="@string/txt_next"
            android:textColor="@color/white"
            android:onClick="checkSignUpAuth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>