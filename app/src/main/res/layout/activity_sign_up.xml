<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign.up.SignUpActivity">

    <ImageView
        android:id="@+id/btn_sign_up_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_sign_up"
        style="@style/ActivityTitle"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sign_up_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_sign_up_back" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:src="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up_back" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:text="@string/txt_desc_sign_up"
        style="@style/BoldText"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/edt_sign_up_phone"
        style="@style/MediumText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_square_line_grey_8"
        android:hint="@string/txt_hint_phone_input"
        android:inputType="number"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/grey"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sign_up_request_auth"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_sign_up_request_auth"
        style="@style/MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/selector_sign_request_btn"
        android:enabled="false"
        android:text="@string/txt_request_phone"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_sign_up_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_sign_up_phone" />

    <EditText
        android:id="@+id/edt_sign_up_auth_num"
        style="@style/MediumText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_square_line_grey_8"
        android:hint="@string/txt_hint_auth_num_input"
        android:inputType="number"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/grey"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_sign_up_request_auth"
        app:layout_constraintStart_toStartOf="@+id/edt_sign_up_phone"
        app:layout_constraintTop_toBottomOf="@+id/edt_sign_up_phone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_up_next"
        style="@style/ButtonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/selector_sign_btn"
        android:enabled="false"
        android:text="@string/txt_next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>