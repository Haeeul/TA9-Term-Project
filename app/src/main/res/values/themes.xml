<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MHTermApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.RatingBar.info" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar_info_window</item>
    </style>

    <style name="Theme.info.Tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.menu.text" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Theme.radioBtn.text" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/deep_dark_grey</item>
    </style>

    <style name="Theme.store.timePicker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
        <item name="colorControlNormal">@color/blue</item>
    </style>
</resources>