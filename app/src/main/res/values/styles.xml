<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActivityTitle">
        <item name="fontFamily">@font/gyeonggi_cheonnyeon_bold</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">22dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ButtonText">
        <item name="fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BoldText">
        <item name="fontFamily">@font/gyeonggi_cheonnyeon_bold</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MediumText">
        <item name="fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LightText">
        <item name="fontFamily">@font/gyeonggi_cheonnyeon_light</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EditHintText" parent="MediumText">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="categoryChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/back_light_grey</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/gyeonggi_cheonnyeon_light</item>
    </style>

    <style name="UserTypeChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/green</item>
    </style>

    <style name="UserChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
    </style>

    <style name="checkBoxText">
        <item name="android:fontFamily">@font/gyeonggi_cheonnyeon_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/deep_dark_grey</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DetailChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipCornerRadius">14dp</item>
        <item name="closeIconVisible">false</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>

</resources>